SYSTEM = tssm

ALGO = VeryFast
PREC = Normal

#STARTING PARAMETER
ISTART = 0 # 1=read WAVECAR
LWAVE = False
ICHARG = 2 # 1=read CHGCAR
LREAL = Auto # when you use small spercell, set it False

AMIN = 0.01

#spin 2, nonspin 1
ISPIN = 1

#SCF
ISMEAR = 1 # 1,2,...N= Mesfessel-Paxton, -5= Bloch
SIGMA = 0.2 # Smearing
ENCUT = 400
EDIFF = 1E-4 # electron relaxation, ion relaxation, using default parameter
EDIFFG = 1E-3 # Plus= Energy minimized, Minus= Force minimized

#SCF OPTIMIZATION
IBRION = 1 # 1= RMM-DIIS quasi-Newton, 2= conjugate-gradient=CG
ISIF = 2 # 0= ion relaxation, 2= 0+ stress tensor, 7= lattice relaxation
ISYM = 0 # If you write 0 of ion number in POSCAR, you must set ISYM= 0. 
NELM = 300 # maximum number of electronic SC steps
NSW = 1 # maximum number of ionic steps
